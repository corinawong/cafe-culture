extends ../layout

block content
  aside
    ul
      li Info 1
      li Info 2
      li Info 3

  div(class="content")
    img(src=cafe.image)
    p= cafe.description
    p(class="submitted") Submitted by #{cafe.author.username}

    p
      a(href=`/cafes/${cafe._id}/comments/new`) Add your review
    for comment in cafe.comments
      div(class="comment")
        p= comment.author.username
        p= comment.text

    a(href=`/cafes/${cafe._id}/edit`) Edit Caf√©